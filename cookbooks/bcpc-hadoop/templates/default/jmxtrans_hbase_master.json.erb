{
    "servers": [
        {
            "port": "<%= node[:bcpc][:hadoop][:jmx][:port][:hbase_master] %>",
            "host": "<%= node[:bcpc][:management][:ip] %>",
            "queries": [
                {
                    "outputWriters": [
                        {
                            "@class": "com.googlecode.jmxtrans.model.output.GraphiteWriter",
                            "settings": {
                                "port": "2003",
                                "host": "<%= node[:bcpc][:management][:vip] %>"
                            }
                        }
                    ],
                    "obj": "Hadoop:name=JvmMetrics,service=HBase",
                    "resultAlias": "hbm_jvm_metrics",
                    "attr": [
                      "GcCount",
                      "GcTimeMillis",
                      "LogError",
                      "LogFatal",
                      "LogInfo",
                      "LogWarn",
                      "MemHeapCommittedM",
                      "MemHeapUsedM",
                      "MemMaxM",
                      "MemNonHeapCommittedM",
                      "MemNonHeapUsedM",
                      "ThreadsBlocked",
                      "ThreadsNew",
                      "ThreadsRunnable",
                      "ThreadsTerminated",
                      "ThreadsTimedWaiting",
                      "ThreadsWaiting"
                    ]
                },
                {
                    "outputWriters": [
                        {
                            "@class": "com.googlecode.jmxtrans.model.output.GraphiteWriter",
                            "settings": {
                                "port": "2003",
                                "host": "<%= node[:bcpc][:management][:vip] %>"
                            }
                        }
                    ],
                    "obj": "Hadoop:name=Master,service=HBase,sub=Server",
                    "resultAlias": "hbm_server",
                    "attr": [
                      "averageLoad",
                      "clusterRequests",
                      "masterActiveTime",
                      "masterStartTime",
                      "numDeadRegionServers",
                      "numRegionServers"
                    ]
                }
            ],
            "numQueryThreads": 2
        }
    ]
}
